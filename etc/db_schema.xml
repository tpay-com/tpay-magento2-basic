<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="tpay_credit_cards" resource="default" engine="innodb" comment="Tpay credit cards" charset="utf8">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="cli_auth" nullable="false" comment="Token"/>
        <column xsi:type="text" name="cli_id" nullable="false" comment="Customer Identifier"/>
        <column xsi:type="text" name="short_code" nullable="false" comment="Description"/>
        <column xsi:type="text" name="vendor" nullable="false" comment="Card vendor"/>
        <column xsi:type="text" name="crc" nullable="false" comment="CRC"/>
        <column xsi:type="datetime" name="created_at" default="CURRENT_TIMESTAMP" nullable="false"
                comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

    <table name="tpay_blik_aliases" resource="default" engine="innodb" comment="Tpay blik aliases" charset="utf8">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="cli_id" nullable="false" comment="Customer Identifier"/>
        <column xsi:type="text" name="alias" nullable="false" comment="BLIK alias"/>
        <column xsi:type="datetime" name="created_at" default="CURRENT_TIMESTAMP" nullable="false"
                comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

</schema>
