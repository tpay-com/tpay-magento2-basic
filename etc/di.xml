<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="tpaycom\magento2basic\Api\TpayInterface" type="tpaycom\magento2basic\Model\TpayPayment" />
    <preference for="tpaycom\magento2basic\Api\TpayConfigInterface" type="tpaycom\magento2basic\Provider\ConfigurationProvider" />
    <preference for="tpaycom\magento2basic\Api\Sales\OrderRepositoryInterface" type="tpaycom\magento2basic\Model\Sales\OrderRepository" />
    <preference for="tpaycom\magento2basic\Model\Api\Data\TokensInterface" type="tpaycom\magento2basic\Model\Token"/>
    <preference for="tpaycom\magento2basic\Model\Api\TokenRepositoryInterface" type="tpaycom\magento2basic\Model\TokenRepository"/>
    <preference for="Magento\Sales\Api\OrderPaymentRepositoryInterface" type="Magento\Sales\Model\Order\Payment\Repository"/>
    <type name="Magento\Payment\Model\MethodList">
        <plugin name="tpay_generic_onsite" type="tpaycom\magento2basic\Model\MethodListPlugin" />
    </type>
    <type name="Magento\Quote\Model\Quote\Payment">
        <plugin name="tpay_generic_payment" type="tpaycom\magento2basic\Model\GenericPaymentPlugin" />
    </type>
    <type name="tpaycom\magento2basic\Model\TpayPayment">
        <arguments>
            <argument name="code" xsi:type="string">tpaycom_magento2basic</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\ConfigurableInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">TpayPaymentMethodValueHandlerPool</argument>
        </arguments>
    </type>
    <virtualType name="TpayPaymentMethodConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">tpaycom_magento2basic</argument>
        </arguments>
    </virtualType>
    <virtualType name="TpayPaymentMethodValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">TpayPaymentMethodConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="TpayPaymentMethodConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">TpayPaymentMethodConfig</argument>
        </arguments>
    </virtualType>
</config>
